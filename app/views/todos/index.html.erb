

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>
		    <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{todo.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{todo.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
			<%= todo.title %>
  </span>
        </td>
        <td>
			<% if todo.notes? %>
			  <button type="button" class="btn btn-link has-popover" data-toggle="popover" title="Notes" data-content="<%= todo.notes %>">Notes</button>
			<% end %>
        </td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: "btn btn-link" %></td>
        <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
	<div class="col-xs-2 col-xs-offset-10">
		<%= link_to new_todo_path, class: 'btn btn-lg btn-success' do %>
		  <i class="glyphicon glyphicon-plus"></i> New task
		<% end %>
	</div>
</div>
